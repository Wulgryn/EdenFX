{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "windows": {
                "command": "cmake --build \\\"${workspaceFolder}/build\\\" --config Debug --target all -- -j 4",
            },
            "linux": {
                "command": "cmake --build \"${workspaceFolder}/build\" --config Debug --target all -- -j 4",
            },
            "options": {
                "cwd": "build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "cmake: configure"
            ]
        },
        {
            "label": "cmake: configure",
            "type": "shell",
            "command": "cmake -S . -B build -G Ninja -DCMAKE_BUILD_TYPE=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}